    </div>

    <!-- Controls -->

    <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">

        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">

        <span class="sr-only">Next</span>
    </a>
</div>



<!--seach-->
<div class="slider">
    <div class="wrap">
        <div class="property-search">
            <section id="turnkey_quicksearch-2" class="widget widget_turnkey_quicksearch" style="margin-top:-130px">
                <div class="widget-wrap">
                    <form class="turnkey-quicksearch-form clearfix" role="search" action="@Url.Action("Search", "Home")" method="get">

                        <div class="tkqs-city">
                            <label for="bqf-city-select" class="bqf-city-label">Property Name</label>
                            <input type="text" class="form-control" placeholder="Search" name="text" style="height:initial">
                        </div><!-- .tkqs-city -->

                        <div class="tkqs-price-min">
                            <label for="bqf-price-min" class="bqf-price-min-label">Property Type</label>

                            @Html.DropDownList("loai", (IEnumerable<SelectListItem>)ViewData["loai"])

                            @*<input type="text" id="bqf-price-min" class="bqf-price-min-input input" name="lp">*@
                        </div><!-- .tkqs-type -->

                        <div class="tkqs-price-max">
                            <label for="bqf-price-max" class="bqf-price-max-label">District</label>
                            @Html.DropDownList("quan", (IEnumerable<SelectListItem>)ViewData["quan"])
                        </div><!-- .tkqs-district -->


                        <div class="tkqs-submit bqf-form-bottom">
                            <div class="bqf-submit">
                                <input class="bqf-submit-button btn btn-alt" type="submit" value="Search Now">
                                <i class="icon icon-nav-search"></i>
                            </div>

                        </div><!-- .bqf-form-bottom -->
                    </form>
                </div>
            </section>
        </div><!-- end .property-search -->
    </div><!-- end .wrap -->
</div>


